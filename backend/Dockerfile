# Backend Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S travellite -u 1001

# Change ownership of the app directory
RUN chown -R travellite:nodejs /app

# Switch to non-root user
USER travellite

# Expose port
EXPOSE 5000

# Start the application
CMD ["npm", "run", "dev"]
